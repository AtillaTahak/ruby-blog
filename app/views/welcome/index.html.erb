<div class="flex items-center justify-center">
  <div class="text-center p-6 bg-white shadow-lg rounded-lg">
      <h1 class="text-2xl font-bold mb-4">Welcome to Community Blog</h1>
      <%= link_to 'Start Writing Articles', articles_path, class: 'bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-700' %>
	  <div class="pt-10 flex flex-col items-center">
		<h2 class="text-xl font-bold mt-5">Articles</h2>
		<ul class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white mt-5">
			<% @articles.each do |article| %>
				<li class="w-full px-4 py-2 border-b border-gray-200 rounded-t-lg dark:border-gray-600">
					<%= link_to article.title, article, class:"bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-700"  %>
				</li>
			<% end %>
		</ul>
	  </div>
  </div>
</div>
