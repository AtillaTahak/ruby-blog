<% if user_signed_in? %>
  <% if current_user.liked_articles.include?(article) %>
    <%= link_to 'Unlike', like_article_path(article), method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded" %>
  <% else %>
    <%= link_to 'Like', like_article_path(article), method: :post, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded" %>
  <% end %>
<% end %>
