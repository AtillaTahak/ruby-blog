<div class="max-w-7xl mx-auto my-8 px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @articles.each do |article| %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-4">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            <%= link_to article.title, article_path(article), class: "text-indigo-600 hover:text-indigo-800 hover:underline" %>
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            <%= article.content %>
          </p>
        </div>
        <div class="px-4 py-4 sm:px-6">
          <%= render partial: 'articles/tags', locals: { article: article } %>
          <%= render partial: 'articles/like', locals: { article: article } %>
          <small class="text-gray-600">By <%= link_to article.user.nickname, user_path(article.user) %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>
