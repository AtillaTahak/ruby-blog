<% if article.tags.any? %>
  <div class="mt-2">
    <% article.tags.each do |tag| %>
      <span class="inline-block bg-green-200 text-green-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-green-700 dark:text-green-300">
        <%= tag.name %>
      </span>
    <% end %>
  </div>
<% end %>
