<div class="container mx-auto my-8">
  <h1 class="text-3xl font-bold mb-4"><%= @article.title %></h1>
  <div class="prose mb-4"><%= @article.content %></div>
  <div class="prose mb-4"> Added <%= time_ago_in_words(@article.created_at) %> ago</div>

  <% unless @article.published? %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-700 mr-2' %> |
  <%= link_to 'Back', articles_path %> |
<%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-700 mr-2' %>
<% else %>
  <%= link_to 'Back', articles_path, class: 'bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-700' %>
<% end %>
</div>
