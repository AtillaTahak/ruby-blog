<% flash.each do |key, message| %>
  <% alert_class = case key
     when 'notice' then 'bg-green-100 border-green-400 text-green-700'
     when 'alert' then 'bg-red-100 border-red-400 text-red-700'
     else
       'bg-gray-100 border-gray-400 text-gray-700'
     end %>
  <div class="<%= alert_class %> border px-4 py-3 rounded relative mb-4" role="alert">
    <strong class="font-bold"><%= key.capitalize %>!</strong>
    <span class="block sm:inline"><%= message %></span>
    <button class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
      <svg class="fill-current h-6 w-6 text-gray-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <title>Close</title>
        <path d="M14.348 5.652a.5.5 0 0 0-.707 0L10 9.293 6.36 5.652a.5.5 0 1 0-.707.707L9.293 10l-3.64 3.641a.5.5 0 1 0 .707.707L10 10.707l3.641 3.64a.5.5 0 1 0 .707-.707L10.707 10l3.64-3.641a.5.5 0 0 0 0-.707z" />
      </svg>
    </button>
  </div>
<% end %>
