<div class="max-w-lg mx-auto my-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Edit Profile</h2>

  <%= form_for(@user) do |f| %>
    <div class="mb-4">
      <%= f.label :nickname, 'Nickname', class: "block text-sm font-bold text-gray-700" %>
      <%= f.text_field :nickname, autofocus: true, class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, 'Email', class: "block text-sm font-bold text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="flex justify-end mt-4">
      <%= f.submit 'Update Profile', class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
